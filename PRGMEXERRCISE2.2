            System.out.print("Please enter a temperature in Celsius: ");
            celsius = loni.nextDouble();
            farhenheit = (celsius * 9.0 / 5) + (32);
            farhenheit = Math.round(farhenheit * 100.0) / 100.0;
            System.out.println(celsius + ("째 Celsius is " + farhenheit)
